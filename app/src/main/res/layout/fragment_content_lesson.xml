                android:gravity="center_vertical"
                android:fontFamily="@font/dmsans_variablefont_opsz"
                android:textSize="24sp"
                android:id="@+id/ls_title"
                android:layout_marginBottom="20dp"
                android:textStyle="bold">

            </TextView>
            <TextView

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home_Explore_Content"
    android:background="#3268EA"
    android:id="@+id/home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/home_search_explore"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="30dp"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_iconn"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:padding="5dp"
                        >

                    </ImageView>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="What do you want to see ?"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:textSize="18sp"
                        android:fontFamily="@font/dmsans_variablefont_opsz"
                        android:padding="15dp">
                    </EditText>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/navb"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:padding="10dp">
                </ImageView>
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:text="Recommend for you"
                    android:textSize="20dp"
                    android:fontFamily="@font/dmsans_variablefont_opsz"
                    android:textStyle="bold">

                </TextView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/intro">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/chien_thuat"
                                android:scaleType="centerCrop">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_variablefont_opsz"

                                android:paddingTop="9dp"
                                android:text="Introduce: History of Chess"
                                android:textColor="#FFFFFF"

                                android:textSize="16sp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/lesson1">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/intro_img"
                                android:scaleType="centerCrop">

                            </ImageView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lesson 1: Pawn. Promote Pawn. Capture en passant"
                                android:maxLines="2"
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"

                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                android:paddingTop="9dp">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/lesson2">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/attack_defend">

                            </ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lesson 2: Attack and Defense. Check. Check retreat. Double check."
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                android:paddingTop="9dp"
                                android:maxLines="2">

                            </TextView>

                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_home_explore"
            android:paddingTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                android:text="New release"
                                android:textColor="#FFFFFF"
                                android:textSize="24dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                android:text="In-demand chess courses."
                                android:textColor="#80FFFFFF"
                                android:textSize="16sp">

                            </TextView>
                        </LinearLayout>


                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/lesson3">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/castling"
                                    android:scaleType="centerCrop">
                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"

                                    android:paddingTop="9dp"
                                    android:text="Lesson 3: Castling"
                                    android:textColor="#FFFFFF"

                                    android:textSize="18sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/lesson4">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/draw"
                                    android:scaleType="centerCrop">
                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"

                                    android:paddingTop="9dp"
                                    android:text="Lesson 4: A draw. Perpetual check"
                                    android:textColor="#FFFFFF"

                                    android:textSize="18sp"
                                    android:textStyle="bold">

                                </TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:id="@+id/lesson5">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/statement"
                                    android:scaleType="centerCrop">
                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"

                                    android:paddingTop="9dp"
                                    android:text="Lesson 5: Draw by stalemate."
                                    android:textColor="#FFFFFF"

                                    android:textSize="16sp"
                                    android:textStyle="bold">

                                </TextView>


                            </LinearLayout>


                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#80FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                >

                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="600dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_them_chess_new">

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"



                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/theme_chess_new">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Join our courses"
                        android:fontFamily="@font/dmsans_variablefont_opsz"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginVertical="16dp">

                    </TextView>

                    <TextView
                        android:id="@+id/text_view7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="adipiscing elit, sed do eiusmod tempor incididun"
                        android:textColor="#FFFFFF" />
                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/btn"
                        android:background="@drawable/border_radius_for_logo_active">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Welcome to lesson"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:fontFamily="@font/dmsans_variablefont_opsz"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
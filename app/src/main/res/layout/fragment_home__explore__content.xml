                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Top Tricks"
                                android:textSize="24dp"
                                android:textColor="#FFFFFF"
                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time to level up your playing skills."
                                android:textSize="16sp"
                                android:textColor="#80FFFFFF"
                                android:fontFamily="@font/dmsans_variablefont_opsz"
                                >

                            </TextView>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_gold"
                                android:layout_centerInParent="true">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="1">

                            </TextView>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/border_radius_for_lesson"
                                android:layout_alignParentLeft="true"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="0"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Introduce: History of Chess"

                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"

                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="The history of chess dates back about 1500 years ago, starting in North India and then spreading to the entire Asian continent. Chess was brought to Europe by the Arab Islamic Empire. The rules of chess changed many times until the 1880s. The first official World Chess Championship was held in 1886."
                                    android:maxLines="2"
                                    android:textSize="12sp"
                                    android:textColor="#80FFFFFF"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_silver"
                                android:layout_centerInParent="true">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="2">

                            </TextView>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/border_radius_for_lesson"
                                android:layout_alignParentLeft="true"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="0"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lesson 3: Castling"
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"

                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Castling is a term in chess that refers to the move where the King is moved from its initial position to the opposite side of the opponent's pieces. When the King reaches the opposite side, the player has achieved the main goal in chess, known as castling or checkmate."
                                    android:maxLines="2"
                                    android:textSize="12sp"
                                    android:textColor="#80FFFFFF"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_silver"
                                android:layout_centerInParent="true">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="3">

                            </TextView>
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/border_radius_for_lesson"
                                android:layout_alignParentLeft="true"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="0"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Lesson 5: Draw by stalemate."
                                    android:textSize="18sp"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"

                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Draw and Stalemate are two important terms in chess. Here is an explanation of each term:"
                                    android:maxLines="2"
                                    android:textSize="12sp"
                                    android:textColor="#80FFFFFF"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dmsans_variablefont_opsz"
                                    android:paddingTop="9dp">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#80FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">

            </View>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                >

                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="600dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_them_chess_new">

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"



                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/theme_chess_new">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Join our courses"
                        android:fontFamily="@font/dmsans_variablefont_opsz"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginVertical="16dp">

                    </TextView>

                    <TextView
                        android:id="@+id/text_view7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lorem ipsum dolor sit amet, consectetur"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="adipiscing elit, sed do eiusmod tempor incididun"
                        android:textColor="#FFFFFF" />
                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/border_radius_for_logo_active">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Welcome to lesson"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            android:fontFamily="@font/dmsans_variablefont_opsz"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".List_Chess">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:paddingBottom="90dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Chess"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:fontFamily="@font/dmsans_variablefont_opsz">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In-demand chess courses."
                    android:textSize="16sp"
                    android:textColor="#80FFFFFF"
                    android:fontFamily="@font/dmsans_variablefont_opsz">

                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/light"

                >

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/pawnbutton"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pawnnn"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/tot">

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/knightbutton"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/knighttt"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ma">

                </ImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:id="@+id/bishopbutton"
                android:layout_marginRight="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bishoppp"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/tuong">

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:id="@+id/rookbutton"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rookkk"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/xe">

                </ImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:id="@+id/queenbutton"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/queennn"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/hau">

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:id="@+id/kingbutton"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/shape_chess">

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kinggg"
                    android:padding="10dp">

                </ImageView>

                <ImageView
                    android:layout_width="118dp"
                    android:layout_height="223dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/vua">

                </ImageView>
            </RelativeLayout>
        </LinearLayout>














